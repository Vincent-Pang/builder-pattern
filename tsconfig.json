{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "declaration": false,
    "outDir": "dist/cjs"
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ]
}
